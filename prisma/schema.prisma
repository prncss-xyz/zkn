generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Entry {
  id        String          @id
  mtime   Int
  title     String?
  wordCount Int
  asset     String?
  tags      TagsOnEntries[]
  event     Event?
  links     Link[]          @relation("source")
  backlinks Link[]          @relation("target")
}

model Tag {
  id      String          @id
  entries TagsOnEntries[]
}

model TagsOnEntries {
  id      Int    @id @default(autoincrement())
  tag     Tag    @relation(fields: [tagId], references: [id])
  tagId   String
  entry   Entry  @relation(fields: [entryId], references: [id])
  entryId String
}

model Event {
  id      Int      @id @default(autoincrement())
  entry   Entry    @relation(fields: [entryId], references: [id])
  entryId String   @unique
  start   DateTime
  end     DateTime
  day     Boolean
}

model Link {
  id          Int     @id @default(autoincrement())
  rank        Int
  source      Entry?  @relation(fields: [sourceId], references: [id], name: "source")
  sourceId    String?
  target      Entry?  @relation(fields: [targetId], references: [id], name: "target")
  targetId    String?
  context     String
}
