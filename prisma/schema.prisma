generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Entry {
  id        String          @id
  mtime     DateTime
  title     String?
  wordcount Int
  tags      TagsOnEntries[]
  event     Event?
  links     Link[]          @relation("source")
  backlinks Link[]          @relation("target")
}

model Tag {
  id      String          @id
  entries TagsOnEntries[]
}

model TagsOnEntries {
  tag     Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  tagId   String
  entry   Entry  @relation(fields: [entryId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  entryId String

  @@id([tagId, entryId])
}

model Event {
  id      Int      @id @default(autoincrement())
  entry   Entry    @relation(fields: [entryId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  entryId String   @unique
  start   DateTime
  end     DateTime
}

model Link {
  id       Int    @id @default(autoincrement())
  source   Entry  @relation(fields: [sourceId], references: [id], name: "source", onDelete: Cascade, onUpdate: Cascade)
  sourceId String
  target   Entry  @relation(fields: [targetId], references: [id], name: "target", onDelete: Cascade, onUpdate: Cascade)
  targetId String
  context  String
  rank     Int
}
