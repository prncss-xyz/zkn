generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Entry {
  id        String          @id
  mtime     Float
  title     String?
  wordCount Int
  tags      TagsOnEntries[]
  event     Event?
  links     Link[]          @relation("source")
  status    String?
}

model Tag {
  id      String          @id
  entries TagsOnEntries[]
}

model TagsOnEntries {
  tag     Tag    @relation(fields: [tagId], references: [id])
  tagId   String
  entry   Entry  @relation(fields: [entryId], references: [id])
  entryId String

  @@id([tagId, entryId])
}

model Event {
  id      Int      @id @default(autoincrement())
  entry   Entry    @relation(fields: [entryId], references: [id])
  entryId String   @unique
  start   DateTime
  end     DateTime
  day     Boolean
}

model Link {
  id       Int    @id @default(autoincrement())
  source   Entry  @relation(fields: [sourceId], references: [id], name: "source")
  sourceId String
  targetId String
  context  String
  rank     Int
}
